---
import BaseHead from "../components/BaseHead.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { SITE_TITLE, SITE_DESCRIPTION } from "../consts";
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={`APP - ${SITE_TITLE}`} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
        max-width: 90%;
        margin: 0 auto;
        padding: 3rem 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 50vh;
      }
      .coming-soon {
        font-size: 2.5rem;
        color: rgb(var(--accent));
        text-align: center;
        margin-bottom: 1rem;
      }
      .subtitle {
        font-size: 1.2rem;
        color: rgb(var(--gray));
        text-align: center;
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <h1 class="coming-soon">敬请期待</h1>
      <p class="subtitle">我们正在努力开发中，即将为您带来精彩内容</p>
    </main>
    <Footer />
  </body>
</html> 